<DraftView xmlns="MarkLight">
  <Region Width="5%"></Region>
  <Region Width="85%">
  <Group Spacing="3px" Orientation="Horizontal"  Width="80%" Margin="-500,20,0,0" Alignment="Right">
    <Label Text="First Name" Width="100px" FontColor="Yellow"/>
    <Label Text ="Last Name" Width="100px" FontColor="Yellow"/>
    <Label Text="Pos" Width="60px" FontColor="Yellow"/>
    <Label Text="Height" Width="60px" FontColor="Yellow"/>
    <Label Text="Weight" Width="80px" FontColor="Yellow"/>
    <Label Text="College" Width="150px" FontColor="Yellow"/>
    <Label Text="Grade" Width="60px" FontColor="Yellow"/>
    <Label Text="Proj. Round" Width="100px" FontColor="Yellow"/>
    <Label Text="40 Time" Width="80" FontColor="Yellow"/>
  </Group>

 <List Id="PlayerList" Items="{OLDraftPlayers}">
    <ListItem IsTemplate="True" Margin="0,510,0,0" AdjustToText="Height" >     
         <Group Orientation="Horizontal"  Alignment="Left" Margin="-340,160,0,0">
            <Label Text="{#Item.FName}" Width="100" Margin="-150,0,0,0"  />
            <Label Text="{#Item.LName}" Width="100" Margin="-150,0,0,0"/>
            <Label Text="{#Item.CollegePOS}" Width="60" Margin="-150,0,0,0"/>
           <Label Text="{#Item.Height}" Width ="60" Margin="-140,0,0,0"/>
           <Label Text="{#Item.Weight} lbs" Width="100" Margin="-150,0,0,0"/>
           <Label Text="{#Item.College}" Width="150" Margin="-160,0,0,0"/>
           <Label Text="{#Item.ActualGrade}" Width="60" Margin="-160,0,0,0"/>
           <Label Text="TBD" Width="100" Margin="-130,0,0,0"/>
           <Label Text="{#Item.FortyYardTime}" Margin="-145,0,0,0"/>
         </Group>      
      </ListItem>
  </List>
    <Group Orientation="Horizontal" Spacing="50" OffsetFromParent="20,680,0,0" >
      <Button Id="PrevBtn" Text="&lt;&lt;" BackgroundColor="Black" FontColor="White" Height="30" Width="30" Click="DecrementPage"></Button>
      <Label  Text="{PageText}" FontColor="Black" Width="75" Alignment="Left" FontSize="24" Margin="-35,0,0,0"/>
      <Button Id="NextBtn" Text=">>" BackgroundColor="Black" FontColor="White" Height="30" Width="30" Click="IncrementPage"></Button>
    </Group>
  </Region>
 
</DraftView>